{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es5",
        "module": "es2015",
        "declaration": true,
        "declarationMap": true,
        "incremental": true,
        "noImplicitAny": true,
        "alwaysStrict": true,
        "noEmitOnError": true,
    },
    "include": [
        "_src/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts",
    ]
}